@model List<Mission08_Group1.Models.ToTask> 

@{
    ViewData["Title"] = "Home Page";
}

<br/>
<h1>Task Manager</h1>
<br/>
<br/>

<!-- Quadrant Layout -->
<div class="quadrant-container">
    <!-- Quadrant I: Important / Urgent -->
    <div class="quadrant top-left">
        <h2>Quadrant I: Important / Urgent</h2>
        <ul id="quadrant1" class="task-list">
            @foreach (var task in Model.Where(t => t.Quadrant == 1 && t.Completed == 0))
            {
                <li id="task-@task.TaskId">
                    @task.TaskDescription
                    <div class="button-group">
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId" >Edit</a>
                    </div>
                </li>
            }
        </ul>
    </div>

    <!-- Quadrant II: Important / Not Urgent -->
    <div class="quadrant top-right">
        <h2>Quadrant II: Important / Not Urgent</h2>
        <ul id="quadrant2" class="task-list">
            @foreach (var task in Model.Where(t => t.Quadrant == 2 && t.Completed == 0))
            {
                <li id="task-@task.TaskId">
                    @task.TaskDescription
                    <div class="button-group">
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                    </div>
                </li>
            }
        </ul>
    </div>

    <!-- Quadrant III: Not Important / Urgent -->
    <div class="quadrant bottom-left">
        <h2>Quadrant III: Not Important / Urgent</h2>
        <ul id="quadrant3" class="task-list">
            @foreach (var task in Model.Where(t => t.Quadrant == 3 && t.Completed == 0))
            {
                <li id="task-@task.TaskId">
                    @task.TaskDescription
                    <div class="button-group">
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                    </div>
                </li>
            }
        </ul>
    </div>

    <!-- Quadrant IV: Not Important / Not Urgent -->
    <div class="quadrant bottom-right">
        <h2>Quadrant IV: Not Important / Not Urgent</h2>
        <ul id="quadrant4" class="task-list">
            @foreach (var task in Model.Where(t => t.Quadrant == 4 && t.Completed == 0))
            {
                <li id="task-@task.TaskId">
                    @task.TaskDescription
                    <div class="button-group">
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

<!-- Your existing CSS -->
<style>
    /* Style for the tasks */
    .task-list li {
        font-family: 'Arial', sans-serif;
        font-size: 18px;
        color: #333;
    }

    .quadrant-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        width: 100%;
        height: 500px;
        margin: auto;
        border: 3px solid #333;
    }
    .quadrant {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
        text-align: left;
        padding: 10px;
        border: 1px solid #333;
        height: 100%;
        background-color: antiquewhite;
    }
    .top-left { border-right: 3px solid #333; border-bottom: 3px solid #333; }
    .top-right { border-bottom: 3px solid #333; }
    .bottom-left { border-right: 3px solid #333; }
</style>