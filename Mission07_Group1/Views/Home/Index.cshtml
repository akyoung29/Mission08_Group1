                    <button class="delete-btn" data-id="2">Delete</button>
                    <button class="edit-btn" data-id="2">Edit</button>
                </div>
            </li>
        </ul>

    </div>
</div>

<!-- CSS for the Four-Square Layout -->
<style>
    /* Style for the tasks */
    .task-list li {
        font-family: 'Arial', sans-serif;   /* Example font */
        font-size: 18px;                    /* Example font size */
        color: #333;                        /* Example font color */
    }



    /* Button Styling */
    .add-task-button {
        position: absolute;
        top: 80px;
        right: 80px;
        background-color: green;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        font-size: 16px;
        border-radius: 5px;
    }
    .add-task-button:hover {
        background-color: darkgreen;
    }

    /* Style for the delete button */
    .delete-btn {
        background-color: red;           /* Red background for the delete button */
        color: white;                    /* White text */
        padding: 5px 10px;               /* Reduced padding for smaller button */
        text-decoration: none;
        font-size: 12px;                 /* Smaller text size */
        border-radius: 5px;              /* Rounded corners */
        border: none;                    /* Remove border */
        cursor: pointer;                 /* Change cursor to pointer */
        transition: background-color 0.3s ease;  /* Smooth hover effect */
        margin-left: 10px;               /* Add space between the task and the button */
    }

    .delete-btn:hover {
        background-color: darkred;       /* Darker red when hovering */
    }

    /* Styling for the edit button */
    .edit-btn {
        background-color: blue;
        color: white;
    }

    .edit-btn:hover {
        background-color: darkblue;
    }




    .quadrant-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        width: 100%;
        height: 500px;
        margin: auto;
        border: 3px solid #333; /* Outer border */
    }
    .quadrant {
        display: flex;
        flex-direction: column; /* Stack content vertically */
        align-items: flex-start; /* Align content to the top */
        justify-content: flex-start; /* Push everything to the top */
        text-align: left;
        padding: 10px; /* Adds space so text isn't touching the edges */
        border: 1px solid #333;
        height: 100%;
        background-color: antiquewhite;
    }
    .top-left { border-right: 3px solid #333; border-bottom: 3px solid #333; }
    .top-right { border-bottom: 3px solid #333; }
    .bottom-left { border-right: 3px solid #333; }
</style>

