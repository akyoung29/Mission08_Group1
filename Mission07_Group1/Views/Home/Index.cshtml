<a href="#" class="add-task-button">+ Add Task</a>

<!-- Quadrant Layout -->
<div class="quadrant-container">
    <!-- Quadrant I: Important / Urgent -->
    <div class="quadrant top-left">
        <h2>Quadrant I: Important / Urgent</h2>
        <ul id="quadrant1" class="task-list">
            <!-- Task with Delete and Edit buttons next to each other -->
            <li id="task1">
                Task 1
                <div class="button-group">
                    <button class="delete-btn" data-id="1">Delete</button>
                    <button class="edit-btn" data-id="1">Edit</button>
                </div>
            </li>
            <li id="task2">
                Task 2
                <div class="button-group">
                    <button class="delete-btn" data-id="2">Delete</button>
                    <button class="edit-btn" data-id="2">Edit</button>
                </div>
            </li>
        </ul>

    </div>

    <!-- Quadrant II: Important / Not Urgent -->
    <div class="quadrant top-right">
        <h2>Quadrant II: Important / Not Urgent</h2>
        <ul id="quadrant2" class="task-list">
            <!-- Task with Delete and Edit buttons next to each other -->
            <li id="task1">
                Task 1
                <div class="button-group">
                    <button class="delete-btn" data-id="1">Delete</button>
                    <button class="edit-btn" data-id="1">Edit</button>
                </div>
            </li>
            <li id="task2">
                Task 2
                <div class="button-group">
                    <button class="delete-btn" data-id="2">Delete</button>
                    <button class="edit-btn" data-id="2">Edit</button>
                </div>
            </li>
        </ul>

    </div>

    <!-- Quadrant III: Not Important / Urgent -->
    <div class="quadrant bottom-left">
        <h2>Quadrant III: Not Important / Urgent</h2>
        <ul id="quadrant3" class="task-list">
            <!-- Task with Delete and Edit buttons next to each other -->
            <li id="task1">
                Task 1
                <div class="button-group">
                    <button class="delete-btn" data-id="1">Delete</button>
                    <button class="edit-btn" data-id="1">Edit</button>
                </div>
            </li>
            <li id="task2">
                Task 2
                <div class="button-group">
                    <button class="delete-btn" data-id="2">Delete</button>
